<%= render("layouts/errors", :object => @comment) %>

<%= form_for(@comment) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
   <div class="form-group">
    <%= f.label :comentable_type %>
    <%= f.text_field :comentable_type %>
  </div>
   <div class="form-group">
    <%= f.label :commentable_id %>
    <%= f.text_field :commentable_id %>
  </div>
  <%= f.submit(:class => "btn btn-primary") %>
<% end %>
